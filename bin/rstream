#!/bin/sh
######################################################################################
### rstream
# 
# license: GPL
# 
# authors:
# - Rudolph Sand aka https://github.com/kelexel
# 
# url:
# - https://github.com/kelexel/rstream
#
######################################################################################

# The root directory where everything will be set
HOME="/home/rstream"
# User to which everything will be setuidgid to
# This only checks & creates the default user test on your system
USER="rstream"


#########################
#########################
#########################
# You should not need to edit anything below this point.
# If you have/feel the need to do otherwise, please inform me of your changes via github.
#########################
#########################
#########################

. $HOME/.version

# set DAEMONTOOLS_SERVICE based on default port service path
DAEMONTOOLS_SERVICE="/var/service"

# clear dirty terminals
clear

####
### Load OS Core files
####
echo ""
echo ""
##
if [ ! -f $HOME/include/rstream-core ]; then echo "!! invalid rstream setup - invalid HOME ?"; exit 99; fi
. $HOME/include/rstream-core

####
### Load OS Core files
####
case `uname -s` in
	FreeBSD) system_os="freebsd9";;
	*) echo "!! Sorry, but your current Operating System is not supported yet, exiting." exit 2;;
esac
echo "########## rstream $TAG for $system_os"
echo ""
. $HOME/include/rstream-os/rstream-${system_os}_common-helper

if [ -f $HOME/etc/rstream.conf ]; then
	. $HOME/etc/rstream.conf

	if [ ! -z $CRTMPD_ENABLE ] && [ $CRTMPD_ENABLE -eq 1 ]; then
		. $HOME/include/rstream-os/rstream-${system_os}_crtmpd-helper
		. $HOME/include/rstream-os/rstream-${system_os}_daemontools-helper
	fi

	if [ ! -z $NGINX_ENABLE ] && [ $NGINX_ENABLE -eq 1 ]; then
		. $HOME/include/rstream-os/rstream-${system_os}_nginx-helper
	fi
else
	. $HOME/include/rstream-config/rstream-config-helper
fi

routeInit
coreRoute $1 $2

# nice and clean ..
echo ""
echo "> done"
echo ""
exit 0;



