. $HOME/include/${system_os}/rstream-${system_os}_nginx-helper
. $HOME/include/${system_os}/rstream-${system_os}_ffmpeg-helper
rstream-core-init


genStreamDestinations(){
	proto=$1
	dest_host=$2
	dest_port=$3
	dest_app=$4
	stream=$5
	# a bit of logic ..
	dest_720="$proto://${dest_host}:${dest_port}/${dest_app}/${stream}_720p"
	dest_480="$proto://${dest_host}:${dest_port}/${dest_app}/${stream}_480p"
	dest_360="$proto://${dest_host}:${dest_port}/${dest_app}/${stream}_360p"
	dest_240="$proto://${dest_host}:${dest_port}/${dest_app}/${stream}_240p"
}

genPlaylistSingle(){
	if [ -z $1 ] || [ -z $2 ]; then echo "!! invalid stream or bitrate in genPlaylistSingle"; exit 88; fi 
	playlist=${1}_${2}.m3u8
	echo ""
	echo ""
	echo "*+ generating new ${1}_${2}.m3u8 playlist";
	echo ""
	echo ""
	echo "#EXTM3U" > $playlist
	echo "#EXT-X-TARGETDURATION:5" >> $playlist
#	echo "#EXT-X-MEDIA-SEQUENCE:0" >> $playlist
	echo "#EXT-X-ALLOW-CACHE:0" >> $laylist
	echo "#EXTINF:5," >> $playlist
	echo "${1}_${2}00000.ts" >> $playlist
	echo "${1}_${2}00001.ts" >> $playlist
	echo "${1}_${2}00002.ts" >> $playlist
	echo "${1}_${2}00003.ts" >> $playlist
	echo "${1}_${2}00004.ts" >> $playlist
	echo "${1}_${2}00005.ts" >> $playlist
	echo "${1}_${2}00006.ts" >> $playlist
	echo "${1}_${2}00007.ts" >> $playlist
	echo "${1}_${2}00008.ts" >> $playlist
	echo "${1}_${2}00009.ts" >> $playlist
}

genPlaylistMulti()
{
	echo ""
	echo ""
	echo "*+ generating new multi-bitrate ${1}.m3u8 playlist";
	echo ""
	echo ""
	if [ ! -f ${1}_360p.m3u8 ]; then echo "Error, ffmpeg not running ? "; exit 1; fi
	playlist=${1}.m3u8
	echo "#EXTM3U" > $playlist
	echo "#EXT-X-1-INF:PROGRAM-ID=1, BANDWIDTH=900000" >> $playlist
	echo "${1}_72Op.m3u8" >> $playlist
	echo "#EXT-X-1-INF:PROGRAM-ID=1, BANDWIDTH=700000" >> $playlist
	echo "${1}_480p.m3u8" >> $playlist
	echo "#EXT-X-1-INF:PROGRAM-ID=1, BANDWIDTH=500000" >> $playlist
	echo "${1}_360p.m3u8" >> $playlist
	echo "#EXT-X-1-INF:PROGRAM-ID=1, BANDWIDTH=150000" >> $playlist
	echo "${1}_360p.m3u8" >> $playlist
}

transcoderNginxHLS(){
	if [ -z $FFMPEG_NGINX_ENABLE ] || [ ! $FFMPEG_NGINX_ENABLE -eq 1 ]; then echo "Error: \"-run nginx <streamname>\" supplied, but FFMPEG_NGINX_ENABLE is not set to \"1\" in $HOME/etc/rstream.conf, exiting !"; exit 98; fi
	app="proxy"
	if [ -z $1 ]; then echo "!! error missing stream name, exiting !!"; exit 99; fi
	stream=$1
	
	src="rtmp://$NGINX_RTMP_IP:$NGINX_RTMP_PORT/$app/$stream"

	checkDir $HOME/tmp/ffmpeg/hls -c www 777
	cd $HOME/tmp/ffmpeg/hls
	genPlaylistSingle $stream "720p"
	genPlaylistSingle $stream "480p"
	genPlaylistSingle $stream "360p"
	genPlaylistSingle $stream "240p"

	(sleep 15 && cd $HLS_PATH/hls  && genPlaylistMulti $stream) &

	# Please improve or modify these to your liking !
#	cmd="$cmd -re -acodec libfaac -ar 44000 -b:a 96k -vcodec libx264 -s 1280x720 -b:v 512k -vpre libx264-ipod640 -flags -global_header -map 0 -f segment -segment_time 10 -segment_list_size 0 -segment_list ${stream}_720p.m3u8 -segment_format mpegts ${stream}_720p%05d.ts"
	cmd="$cmd -re -acodec libfaac -ar 44000 -b:a 96k -vcodec libx264 -s 1280x720 -b:v 512k -vpre libx264-ipod640 -flags -global_header -map 0 -f segment -segment_time 10 -segment_list_size 10 -segment_wrap 10 -segment_format mpegts ${stream}_720p%05d.ts"
	cmd="$cmd -re -acodec libfaac -ar 44000 -b:a 96k -vcodec libx264 -s 1280x720 -b:v 512k -vpre libx264-ipod640 -flags -global_header -map 0 -f segment -segment_time 10 -segment_list_size 10 -segment_wrap 10 -segment_format mpegts ${stream}_480p%05d.ts"
	cmd="$cmd -re -acodec libfaac -ar 44000 -b:a 96k -vcodec libx264 -s 426x250  -b:v 256k -vpre libx264-ipod320 -flags -global_header -map 0 -f segment -segment_time 10 -segment_list_size 10 -segment_wrap 10 -segment_format mpegts ${stream}_360p%05d.ts"
	cmd="$cmd -re -acodec libfaac -ar 44000 -b:a 48k -vcodec libx264 -s 426x250  -b:v 128k -vpre libx264-ipod320 -flags -global_header -map 0 -f segment -segment_time 10 -segment_list_size 10 -segment_wrap 10 -segment_format mpegts ${stream}_240p%05d.ts"
	logHeader "Enconding source: $src"
	logHeader "Encoder destinations: $cmd"
	exec $FFMPEG_BIN  -loglevel fatal -threads 15 -i "$src live=1" $cmd

}
# nginx transcoding - working as of 0.4
transcoderNginxH264(){
	if [ ! -f $FFMPEG_BIN ]; then echo "!! error FFMPEG_BIN not found !!"; exit 99; fi
	if [ -z $FFMPEG_NGINX_ENABLE ] || [ ! $FFMPEG_NGINX_ENABLE -eq 1 ]; then echo "Error: \"-run nginx <streamname>\" supplied, but FFMPEG_NGINX_ENABLE is not set to \"1\" in $HOME/etc/rstream.conf, exiting !"; exit 98; fi
	app="proxy"
	dest_app="r"
	if [ -z $1 ]; then echo "!! error missing stream name, exiting !!"; exit 99; fi
	stream=$1

	src="rtmp://$NGINX_RTMP_IP:$NGINX_RTMP_PORT/$app/$stream"
	genStreamDestinations "rtmp" $NGINX_RTMP_IP $NGINX_RTMP_PORT $dest_app $stream h264

	# if hls is enabled and set to nginx, create the multi-bitrate playlist 10 secs after the stream started to aboid "iOS stuck on black screen"
	if [ ! -z $HLS_ENABLE ] && [ $HLS_ENABLE -eq 1 ] && [ ! -z $HLS_TYPE ] && [ $HLS_TYPE = "nginx" ]; then
		checkDir $HOME/tmp/nginx/hls -c www 777;
		echo "** Cleaning up HLS files older than 5 minutes"
		find $HOME/tmp/nginx/hls -mmin +5 -name "*.m3u8" -o -name "*.ts" -exec rm -f {} \;
		echo "** Launching multi-bitrate sleeping beauty"
		(sleep 20 && cd $HLS_PATH/hls && genPlaylistMulti $stream) &
	fi

	cmd="$cmd -re -acodec libfaac -ar 44100 -b:a 96k -vcodec libx264 -s 1280x720 -b:v 896k -r 25 -metadata streamName=${stream}_720p -f flv $dest_720"
	cmd="$cmd -re -acodec libfaac -ar 44100 -b:a 96k -vcodec libx264 -s 854x480 -b:v 512k -r 25 -metadata streamName=${stream}_480p -f flv $dest_480"
	cmd="$cmd -re -acodec libfaac -ar 22050 -b:a 96k -vcodec libx264 -s 640x360 -b:v 256k -r 25 -metadata streamName=${stream}_360p  -f flv $dest_360"
	cmd="$cmd -re -acodec libfaac -ar 22050 -b:a 48k -vcodec libx264 -s 426x250 -b:v 128k -r 25 -metadata streamName=${stream}_240p  -f flv $dest_240"

	logHeader "Running enconding args: $cmd"
	exec $FFMPEG_BIN -loglevel fatal -threads 16  -i "$src live=1" $cmd
}

transcoderCrtmpd(){
	if [ -z $FFMPEG_CRTMPD_ENABLE ] || [ ! $FFMPEG_CRTMPD_ENABLE -eq 1 ]; then echo "Error: \"-run crtmpd <streamname>\" supplied, but FFMPEG_CRTMPD_ENABLE is not set to \"1\" in $HOME/etc/rstream.conf, exiting !"; exit 98; fi
	if [ -z $1 ]; then echo "!! error missing stream name, exiting !!"; exit 99; fi

	app="proxy"
	dest_app="r"
	stream=$1
	src="rtmp://$CRTMPD_RTMP_IP:$CRTMPD_RTMP_PORT/$app/$stream"

	genStreamDestinations "tcp" $CRTMPD_LIVEFLV_IP $CRTMPD_LIVEFLV_PORT $stream
	cmd="$cmd -re -acodec libfaac -ar 44100 -b:a 96k -vcodec libx264 -s 1280x720 -b:v 896k -f flv -metadata streamName=${stream}_720p -f flv $dest_720"
	cmd="$cmd -re -acodec libfaac -ar 44100 -b:a 96k -vcodec libx264 -s 854x480 -b:v 512k -f flv -metadata streamName=${stream}_480p -f flv $dest_480"
	cmd="$cmd -re -acodec libfaac -ar 22050 -b:a 96k -vcodec libx264 -s 640x360 -b:v 396k -f flv -metadata streamName=${stream}_360p -f flv $dest_360"
	cmd="$cmd -re -acodec libfaac -ar 22050 -b:a 48k -vcodec libx264 -s 426x250 -b:v 256k -f flv -metadata streamName=${stream}_240p -f flv $dest_240"
	echo ""
	logHeader "Running $FFMPEG_BIN -threads 15 -i \"$src live=1\"  $cmd"
	echo
	exec $FFMPEG_BIN -i "$src live=1" $cmd
}

routeTranscoder(){

	if [ -z $1 ]; then routeHelp; exit 99; fi
	case $1 in
		-run)
			if [ -z $2 ]; then routeHelp; exit 99; fi
			case $2 in
				crtmpd) transcoderCrtmpd $3;; # CRTMPD (RTMP / FLV) > ffmpeg > CRTMPD (tcvp / FLV)
				nginx) transcoderNginxH264 $3;; # CRTMPD (RTMP / FLV) > ffmpeg > NGINX (rtmp / FLV)
				hls) transcoderNginxHLS $3;; # CRTMPD (RTMP / FLV) > ffmpeg > NGINX (rtmp / FLV)
				*) routeHelp;;
			esac
		;;
		-service-create) ffmpeg-router "create" $3;;
		-service-link) ffmpeg-router "link" $3;;
	esac
}


routeTranscoder $1 $2 $3 $4

